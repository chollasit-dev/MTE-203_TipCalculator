<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="TipCalculator.App"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Application.Resources>

        <!--  Application Resource Dictionary  -->
        <ResourceDictionary>

            <!--  Pallete  -->
            <Color x:Key="primary-back-title-color">#00ADB5</Color>
            <Color x:Key="primary-title-color">White</Color>

            <!--  Pallete-End  -->
            <Style ApplyToDerivedTypes="True" TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Key=primary-back-title-color}" />
                <Setter Property="BarTextColor" Value="{StaticResource Key=primary-title-color}" />
            </Style>

        </ResourceDictionary>
        <!--  Ref: https://stackoverflow.com/questions/41623635/xamarin-forms-control-the-color-title-of-the-header-bar  -->

    </Application.Resources>
</Application>